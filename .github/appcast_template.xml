<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:sparkle="http://www.andymatuschak.org/xml-namespaces/sparkle"
     version="2.0">
  <channel>
    <title>HeartCheck Updates</title>
    <item>
      <title>{{VERSION}}</title>
      <sparkle:releaseNotesLink>{{RELEASE_NOTES}}</sparkle:releaseNotesLink>

      <!-- Full EXE -->
      <enclosure 
        url="{{FULL_DOWNLOAD_URL}}"
        sparkle:version="{{VERSION}}"
        length="{{FULL_FILE_SIZE}}"
        type="application/octet-stream" />

      <!-- Delta Patch (from previous version) -->
      <enclosure
        url="{{DELTA_DOWNLOAD_URL}}"
        sparkle:version="{{VERSION}}"
        sparkle:delta="true"
        sparkle:from="{{PREVIOUS_VERSION}}"
        length="{{DELTA_FILE_SIZE}}"
        type="application/octet-stream"/>
    </item>
  </channel>
</rss>
